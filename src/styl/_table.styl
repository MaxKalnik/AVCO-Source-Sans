@import "_variable.styl"

.region-info__table-wrap
  width: 100%
  position: relative

.region-info__table-bg
  position: absolute
  width: 100%
  height: 100%
  top: 0
  left: 0
  transition: .25s

.region-info__table-bg--pink
  background: linear-gradient(269deg, #FF5C98 3%, #FF2172 100%) center no-repeat
  opacity: 0.9

.region-info__table-bg--orange
  background: linear-gradient(-269deg, #F2AD00 3%, #F3C93C 100%) center no-repeat
  opacity: 0

.region-info__table
  position: relative
  width: 100%
  border-collapse: collapse
  border-radius: 5px
  thead
    th
      height: 48px
      padding: 0 20px
      font-size: 12px
      line-height: 16px
      color: $color_white
      text-align: left
      text-transform: uppercase
      text-align: center
      border-right: 1px solid rgba(255, 255, 255, 0.3)
      box-sizing: border-box
      text-align: center
      &:nth-child(2)
        text-align: left

      &:last-child
        border-right: none

  tbody
    tr
      background-color: #ffffff
      &:nth-child(even)
        background: #fafcfc

      &:last-child
        td
          border-bottom: none

    td
      position: relative
      width: auto
      height: 68px
      padding: 16px 20px
      border-bottom: 1px solid #E6EEF2
      border-right: 1px solid #F1F1F1
      font-size: 20px
      line-height: 21px
      text-align: center
      box-sizing: border-box
      color: #0a0c0d
      &:first-child
        text-align: center
        font-size: 16px
        line-height: 16px
        font-weight: 600
        border-left: 1px solid #F1F1F1
        color: #879DA8
        border-left: none

      &:nth-child(2)
        width: 18%
        font-size: 20px
        line-height: 16px
        font-weight: 600
        color: #1C3144
        text-align: left

      &:nth-child(7)
        width: 12%
        text-align: center

.domestic
  display: inline-block
  width: 100%
  font-weight: 600
  transition: .35s
  transform: scale(1)
  will-change: transform

.international
  display: inline-block
  width: 100%
  font-weight: 600
  opacity: 0.4
  transition: .35s
  transform: scale(0.7)
  will-change: transform

.domestic--exp
  color: #EC2E6F
  font-weight: 700

.region-info__table-wrap--international
  .region-info__table-bg--pink
    opacity: 0

  .region-info__table-bg--orange
    opacity: 1

  .domestic
    opacity: 0.4
    transform: translateY(21px) scale(0.7)

  .domestic--exp
    color: #0a0c0d
    opacity: 0.4
    font-weight: 600

  .international
    transform: translateY(-21px) scale(1)
    opacity: 1

  .international--exp
    color: #ffaa00
    font-weight: 700


.table-switcher
  display: flex
  flex-direction: row
  align-items: center
  margin-bottom: 24px

.table-switcher__btn
  font-size: 16px
  line-height: 22px
  color: #797f92
  font-weight: 600
  text-transform: uppercase
  cursor: pointer

.table-switcher__btn--active
  color: #ff377d
  font-weight: 700

.table-switcher__toggle-btn
  position: relative
  width: 60px
  height: 32px
  padding: 4px 6px
  border-radius: 20px
  margin: 0 13px
  font-size: 0
  box-sizing: border-box
  border-radius: 20px
  cursor: pointer
  overflow: hidden

.table-switcher__toggle-bg
  position: absolute
  width: calc(100% + 1px)
  height: 100%
  top: 0
  left: -1px
  transition: .25s
  border-radius: 20px

.table-switcher__toggle-bg--pink
  background-image: linear-gradient(269deg, #FF5C98 3%, #FF2172 100%)
  opacity: 0.9

.table-switcher__toggle-bg--orange
  background-image: linear-gradient(-269deg, #F3C93C 1%, #F2AD00 99%)
  opacity: 0

.table-switcher__toggle-img
  position: absolute
  will-change: transform
  transition: .25s
  z-index: 2

.table-switcher__toggle
  width: 50%
  height: 24px
  display: inline-block
  cursor: pointer

.table-switcher__btn--domestic
  color: #ff377d

.table-switcher--international
  .table-switcher__toggle-bg--orange
    opacity: 0.9

  .table-switcher__toggle-bg--pink
    opacity: 0

  .table-switcher__btn--domestic
    color: #797f92

  .table-switcher__btn--international
    color: #edaa30

  .table-switcher__toggle-img
    transform: translateX(24px)
